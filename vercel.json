{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "api/ai.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/ai", "dest": "/api/ai.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "functions": {
    "api/ai.js": { "maxDuration": 60 }
  }
}
